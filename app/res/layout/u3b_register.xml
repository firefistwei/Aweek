<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/u3b_whitegrey"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/u3b_card"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Welcome To AWeek !"
            android:textColor="@color/dodger_blue"
            android:textSize="24dp"
            android:typeface="sans" />

        <ImageView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/app_icon_big" />

        <EditText
            android:id="@+id/u3b_register_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/login_icon_account"
            android:drawablePadding="10dip"
            android:ems="10"
            android:hint="请输入您的邮箱"
            android:inputType="textEmailAddress"
            android:paddingLeft="15dip"
            android:singleLine="true"
            android:textColor="@color/dodger_blue"
            android:textColorHint="@color/dodger_blue"
            android:textSize="15sp" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/u3b_register_passwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/login_icon_password"
            android:drawablePadding="10dip"
            android:ems="10"
            android:hint="请输入6~10位密码"
            android:inputType="textPassword"
            android:paddingLeft="15dip"
            android:password="true"
            android:singleLine="true"
            android:textColor="@color/dodger_blue"
            android:textColorHint="@color/dodger_blue"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/u3b_register_passwd2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/login_icon_password"
            android:drawablePadding="10dip"
            android:ems="10"
            android:hint="重复密码"
            android:inputType="textPassword"
            android:paddingLeft="15dip"
            android:password="true"
            android:singleLine="true"
            android:textColor="@color/dodger_blue"
            android:textColorHint="@color/dodger_blue"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/u3b_register_done"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"
                android:onClick="login_btn"
                android:src="@drawable/ic_blue_done" />
        </RelativeLayout>

        
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/welcome_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All rights reserved.Ver.2.0"
            android:textColor="#fff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/welcome_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copyright © 2014  firefist.team"
            android:textColor="#fff"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>