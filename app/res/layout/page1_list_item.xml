<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/page1_list_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/u3b_card"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:padding="5dp" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <SurfaceView
            android:id="@+id/page1_list_item_surfaceview"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#0000"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/page1_list_item_photo"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/camera_icon"
            android:visibility="visible" />

        <ProgressBar
            android:id="@+id/page1_list_item_progressbar"
            style="@android:style/Widget.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="false"
            android:indeterminateDrawable="@drawable/u3b_video_refresh"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/page1_list_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_type_audio" />

        <ImageView
            android:id="@+id/page1_list_item_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_video_play"
            android:visibility="invisible" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/u3b_whitegrey" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/page1_list_item_head"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_margin="8dip"
            android:clickable="true"
            android:src="@drawable/u3b_default_head" />

        <TextView
            android:id="@+id/page1_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/page1_list_item_head"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/page1_list_item_head"
            android:singleLine="true"
            android:text="发布者的名字"
            android:textColor="@color/dodger_blue"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/page1_list_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/page1_list_item_name"
            android:layout_below="@id/page1_list_item_name"
            android:layout_marginTop="5dp"
            android:text="#照片的标题"
            android:textColor="@color/u3b_grey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/page1_list_item_timeanddistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/page1_list_item_name"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="3小时前 | 0.3km"
            android:textColor="@color/u3b_grey"
            android:textSize="14sp"
            android:textStyle="normal" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_margin="8dp"
        android:background="@color/u3b_whitegrey" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="4dp" >

        <TextView
            android:id="@+id/page1_list_item_morecomments"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="查看更多评论  0条"
            android:textColor="@color/u3b_grey"
            android:textSize="16sp"
            android:textStyle="normal" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_margin="8dp"
        android:background="@color/u3b_whitegrey" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/page1_list_item_likebtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/u3b_btn_like"
            android:gravity="center_vertical|right"
            android:textColor="@color/dodger_blue" />

        <Button
            android:id="@+id/page1_list_item_commentbtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/u3b_btn_comment"
            android:gravity="center_vertical|right"
            android:textColor="@color/dodger_blue" />

        <Button
            android:id="@+id/page1_list_item_morebtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginLeft="10dp"
            android:background="@drawable/u3b_btn_revine" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" >
    </LinearLayout>

</LinearLayout>