<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/u3b_black"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         >

        <ImageView
            android:id="@+id/u3b_myactive_item_photo_iv"
            android:layout_marginTop="20dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/u3b_frame_avatar"
            android:padding="2dp"
            android:src="@drawable/u3b_head" />
        
        <TextView
            android:id="@+id/u3b_myactive_item_tag_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginBottom="95dp"
            android:layout_alignBottom="@id/u3b_myactive_item_photo_iv"
            android:layout_alignLeft="@id/u3b_myactive_item_photo_iv"
            android:background="@drawable/tab_unread_bg"
            android:gravity="center"
            android:text="0"
            android:textColor="#fff"
            android:textSize="12dp"
            android:visibility="visible" />
        
        <TextView
            android:id="@+id/u3b_myactive_item_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="活动时间"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="#fff"
            android:textSize="12dp"
            android:background="@drawable/u3b_active_tag2"/>
        
        <TextView
            android:id="@+id/u3b_myactive_item_position_tv"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="活动地点"
            android:gravity="center"
            android:layout_marginTop="60dp"
            android:textColor="#fff"
            android:textSize="12dp"
            android:background="@drawable/u3b_active_tag2"/>
       
    </RelativeLayout>

    <TextView
        android:id="@+id/u3b_myactive_item_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:singleLine="true"
        android:text="活动的标题"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/u3b_myactive_item_content_btn"
        android:singleLine="true"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/u3b_btn_settings_blue"
        android:text="XXX回复：你说为什么呢？"
        android:textColor="#494949"
        android:textSize="18dp"
        android:textStyle="bold"
        android:visibility="visible" />

</LinearLayout>