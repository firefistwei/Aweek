<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/u3b_whitegrey" >

    <LinearLayout
        android:id="@+id/friend_friendfrag_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/u3b_msg_cardbg_red"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <LinearLayout
                android:id="@+id/u3b_message_item_photo_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <ImageView
                    android:id="@+id/u3b_myactive_item_photo_iv"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/u3b_frame_avatar"
                    android:src="@drawable/random_head1" />
            </LinearLayout>

            <TextView
                android:id="@+id/u3b_message_item_tag_tv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right|top"
                android:background="@drawable/tab_unread_bg"
                android:gravity="center"
                android:padding="2dp"
                android:text="11"
                android:textColor="#fff"
                android:textSize="12dp"
                android:visibility="visible" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/u3b_message_item_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="发送者名字"
                android:textColor="#222"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>