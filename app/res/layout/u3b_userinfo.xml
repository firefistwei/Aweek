<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#eee"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <ImageView
                    android:id="@+id/u3b_userinfo_avatar"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/u3b_frame_avatar"
                    android:padding="2dp"
                    android:src="@drawable/u3b_default_head" />

                <ImageView
                    android:id="@+id/u3b_userinfo_ownvideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/u3b_userinfo_avatar"
                    android:src="@drawable/ic_own_video_no" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/dodger_blue" />

            <TextView
                android:id="@+id/u3b_userinfo_name"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/u3b_userinfo_btn"
                android:gravity="center"
                android:text="你的名字"
                android:textColor="@color/dodger_blue"
                android:textSize="20dp"
                android:textStyle="bold" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:background="@color/u3b_whitegrey" />

            <TextView
                android:id="@+id/u3b_userinfo_sig"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/u3b_userinfo_btn"
                android:gravity="center"
                android:text="一句话介绍一下你自己"
                android:textColor="@color/u3b_grey"
                android:textSize="16dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:background="@color/u3b_whitegrey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:layout_marginTop="15dp"
                android:text="基本信息"
                android:textColor="@color/dodger_blue"
                android:textSize="18dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:background="@color/dodger_blue" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingLeft="8dip"
                    android:gravity="center_vertical"
                    android:text="性别"
                    android:textColor="@color/u3b_grey"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/u3b_userinfo_gender"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:paddingRight="8dp"
                    android:gravity="center_vertical|right"
                    android:text="Man"
                    android:textColor="@color/u3b_grey"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/u3b_whitegrey" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingLeft="8dip"
                    android:gravity="center_vertical"
                    android:text="生日"
                    android:textColor="@color/u3b_grey"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/u3b_userinfo_birthday"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:paddingRight="8dp"
                    android:gravity="center_vertical|right"
                    android:text="1990-1-1"
                    android:textColor="@color/u3b_grey"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/u3b_whitegrey" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingLeft="8dip"
                    android:gravity="center_vertical"
                    android:text="职业"
                    android:textColor="@color/u3b_grey"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/u3b_userinfo_job"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:paddingRight="8dp"
                    android:background="@drawable/u3b_userinfo_btn"
                    android:gravity="center_vertical|right"
                    android:text="学生"
                    android:textColor="@color/u3b_grey"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/u3b_whitegrey" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingLeft="8dip"
                    android:background="@drawable/u3b_userinfo_btn"
                    android:gravity="center_vertical"
                    android:text="专长"
                    android:textColor="@color/u3b_grey"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/u3b_userinfo_goodat"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:paddingRight="8dp"
                    android:gravity="right|center_vertical"
                    android:text="Android"
                    android:textColor="@color/u3b_grey"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/u3b_whitegrey" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingLeft="8dip"
                    android:background="@drawable/u3b_userinfo_btn"
                    android:gravity="center_vertical"
                    android:text="学校"
                    android:textColor="@color/u3b_grey"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/u3b_userinfo_school"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:paddingRight="8dp"
                    android:background="@drawable/u3b_userinfo_btn"
                    android:gravity="center_vertical|right"
                    android:text="加里敦大学"
                    android:textColor="@color/u3b_grey"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/u3b_whitegrey" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingLeft="8dip"
                    android:gravity="right|center_vertical"
                    android:text="注册日期"
                    android:textColor="@color/u3b_grey"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/u3b_userinfo_registerday"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:paddingRight="8dp"
                    android:gravity="right|center_vertical"
                    android:text="2014-10-1"
                    android:textColor="@color/u3b_grey"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/u3b_whitegrey" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingLeft="8dip"
                    android:gravity="right|center_vertical"
                    android:text="个人说明"
                    android:textColor="@color/u3b_grey"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/u3b_userinfo_introduction"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/u3b_userinfo_btn"
                    android:paddingRight="8dp"
                    android:gravity="right|center_vertical"
                    android:text=""
                    android:textColor="@color/u3b_grey"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/u3b_whitegrey" />

            <!-- \\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\ -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:layout_marginTop="15dp"
                android:text="账号"
                android:textColor="@color/dodger_blue"
                android:textSize="18dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:background="@color/dodger_blue" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingLeft="8dip"
                    android:gravity="center_vertical"
                    android:text="邮箱绑定"
                    android:textColor="@color/u3b_grey"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/u3b_userinfo_email"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:paddingRight="8dp"
                    android:background="@drawable/u3b_userinfo_btn"
                    android:gravity="center_vertical|right"
                    android:text=""
                    android:textColor="@color/u3b_grey"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/u3b_whitegrey" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingLeft="8dip"
                    android:gravity="center_vertical"
                    android:text="手机绑定"
                    android:textColor="@color/u3b_grey"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/u3b_userinfo_phone"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:paddingRight="8dp"
                    android:background="@drawable/u3b_userinfo_btn"
                    android:gravity="center_vertical|right"
                    android:text=""
                    android:textColor="@color/u3b_grey"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/u3b_whitegrey" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/u3b_userinfo_password"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="8dip"
                    android:background="@drawable/u3b_userinfo_btn"
                    android:gravity="center_vertical"
                    android:text="重置密码"
                    android:textColor="@color/u3b_grey"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/u3b_whitegrey" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/u3b_userinfo_privatesset"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="8dip"
                    android:background="@drawable/u3b_userinfo_btn"
                    android:gravity="center_vertical"
                    android:text="隐私设置"
                    android:textColor="@color/u3b_grey"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/u3b_whitegrey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:layout_marginTop="15dp"
                android:text="社交网络"
                android:textColor="@color/dodger_blue"
                android:textSize="18dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:background="@color/dodger_blue" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/u3b_userinfo_connectrenren"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dip"
                    android:gravity="center_vertical"
                    android:text="连接人人"
                    android:textColor="@color/u3b_grey"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/u3b_userinfo_renrenicon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="2dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="18dp"
                    android:src="@drawable/icon_renren_no" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/u3b_whitegrey" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/u3b_userinfo_connectweibo"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dip"
                    android:gravity="center_vertical"
                    android:text="连接新浪微博"
                    android:textColor="@color/u3b_grey"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/u3b_userinfo_sinaicon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="2dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="18dp"
                    android:src="@drawable/icon_sina_no" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/u3b_whitegrey" />

            <Button
                android:id="@+id/u3b_userinfo_logout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/u3b_btn_settings_red"
                android:gravity="center"
                android:text="退出账号"
                android:textColor="#fff"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>