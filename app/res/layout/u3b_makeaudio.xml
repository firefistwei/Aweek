<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222"
    android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/u3b_makeaudio_top_rlayout"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip" >

                <TextView
                    android:id="@+id/u3b_makeaudio_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="0&apos;&apos;"
                    android:textColor="#fff"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/u3b_makeaudio_maxtime_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="60″"
                    android:textColor="#fff"
                    android:textSize="16dp" />

                <ProgressBar
                    android:id="@+id/u3b_makeaudio_progressbar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:max="60"
                    android:progress="0"
                    android:progressDrawable="@drawable/globle_player_progress_bar_bg" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal" >

                <!-- 下面的是 录音模块 -->

                <RelativeLayout
                    android:id="@+id/u3b_makeaudio_record_rlayout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    android:visibility="visible" >

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerInParent="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/voice_ugc_icon_recording" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/voice_ugc_icon_recordingring"
                        android:gravity="bottom" >

                        <ImageView
                            android:id="@+id/u3b_makeaudio_volume_iv"
                            android:layout_width="50dp"
                            android:layout_height="0dp"
                            android:background="@drawable/voice_ugc_icon_recordingvolume" />
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/voice_ugc_icon_recordingring" />

                    <RelativeLayout
                        android:id="@+id/u3b_makeaudio_recordinglight_rlayout"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" >

                        <ImageView
                            android:id="@+id/u3b_makeaudio_recordinglight_iv1"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_centerInParent="true"
                            android:scaleType="centerInside"
                            android:src="@drawable/voice_ugc_icon_recordinglight"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/u3b_makeaudio_recordinglight_iv2"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_centerInParent="true"
                            android:scaleType="centerInside"
                            android:src="@drawable/voice_ugc_icon_recordinglight"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/u3b_makeaudio_recordinglight_iv3"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_centerInParent="true"
                            android:scaleType="centerInside"
                            android:src="@drawable/voice_ugc_icon_recordinglight"
                            android:visibility="gone" />
                    </RelativeLayout>
                </RelativeLayout>
                
                <ImageView
                    android:id="@+id/u3b_makeaudio_play_iv"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="120dp"
                    android:src="@drawable/ic_video_play"
                    android:visibility="gone" />
                
                
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/u3b_makeaudio_start_iv"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/amsc_cam_button"
                    android:background="@drawable/amsc_cam_glow_ring"
                    android:clickable="true"
                    android:visibility="visible" />
            </LinearLayout>

            
   

</LinearLayout>