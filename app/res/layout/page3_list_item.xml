<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/page3_list_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/u3b_card"
    android:orientation="vertical"
    android:padding="5dp" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <!-- android:id="@+id/u3b_page3_list_item_image" -->

        <ImageView
            android:id="@+id/page3_item_img"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:scaleType="centerCrop"
            android:src="@drawable/camera_icon"
            android:visibility="visible" />

        <ProgressBar
            style="@android:style/Widget.ProgressBar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:indeterminate="false"
            android:indeterminateDrawable="@drawable/u3b_video_refresh" />

        <VideoView
            android:id="@+id/u3b_page3_list_item_videoview"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/u3b_page3_list_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            android:src="@drawable/ic_type_video" />

        <ImageView
            android:id="@+id/u3b_page3_list_item_open"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_video_overlay" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_margin="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_type_video" />

        <TextView
            android:id="@+id/page3_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:text="照片的标题"
            android:textColor="@color/dodger_blue"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/u3b_whitegrey" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/page3_list_item_head"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_margin="8dip"
            android:src="@drawable/random_head_2" />

        <TextView
            android:id="@+id/page3_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/page3_list_item_head"
            android:layout_toRightOf="@id/page3_list_item_head"
            android:singleLine="true"
            android:text="发布者的名字"
            android:textColor="@color/dodger_blue"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/page3_list_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/page3_list_item_name"
            android:layout_marginBottom="6dp"
            android:layout_toRightOf="@id/page3_list_item_head"
            android:text="3小时前/时间"
            android:textColor="@color/u3b_grey"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/page3_list_item_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/page3_list_item_time"
            android:layout_toRightOf="@id/page3_list_item_time"
            android:layout_marginLeft="20dp"
            android:gravity="right"
            android:text="300m/距离"
            android:textColor="@color/u3b_grey"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/u3b_whitegrey" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="right"
        android:orientation="horizontal" >

        <Button
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/u3b_btnpho_liek"
            android:gravity="center_vertical|right"
            android:paddingRight="10dp"
            android:text="0人"
            android:textColor="@color/dodger_blue" />

        <Button
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:background="@drawable/u3b_btnpho_cmt"
            android:gravity="center_vertical|right"
            android:paddingRight="10dp"
            android:text="0条"
            android:textColor="@color/dodger_blue" />

        <Button
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:background="@drawable/u3b_btnpho_mor" />
    </LinearLayout>

</LinearLayout>