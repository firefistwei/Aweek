<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/u3b_whitegrey"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/u3b_card"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="这两项注册后不可更改哦"
            android:textColor="@color/dodger_blue"
            android:textSize="24dp"
            android:typeface="sans" />

        <ImageView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/app_icon_big" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/u3b_userinfo_btn"
            android:onClick="register2_sex_click"
            android:clickable="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dip"
                android:paddingLeft="15dip"
                android:text="性别："
                android:textColor="@color/dodger_blue"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/u3b_register2_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:text="Woman"
                android:textColor="@color/u3b_tomato"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/u3b_userinfo_btn"
            android:onClick="register2_birthday_click"
            android:clickable="true"  >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dip"
                android:paddingLeft="15dip"
                android:text="生日："
                android:textColor="@color/dodger_blue"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/u3b_register2_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:text="2014-01-01"
                android:textColor="@color/u3b_blue"
                android:textSize="18dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/u3b_register2_done"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"
                android:onClick="login_btn"
                android:src="@drawable/ic_blue_done" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/welcome_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All rights reserved.Ver.2.0"
            android:textColor="#fff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/welcome_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copyright © 2014  firefist.team"
            android:textColor="#fff"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>