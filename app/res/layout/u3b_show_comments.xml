<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_grey"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/u3b_showcomments_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:cacheColorHint="#0000"
        android:divider="#0000"
        android:listSelector="#0000"
        android:scrollbars="none" />

    <LinearLayout
        android:id="@+id/u3b_showcomments_text_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/chat_footer_bg"
        android:gravity="center_vertical"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/u3b_showcomments_tovoice"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="4dp"
            android:layout_marginLeft="4dp"
            android:src="@drawable/little_voice" />

        <EditText
            android:id="@+id/u3b_showcomments_conmment_content"
            android:layout_width="fill_parent"
            android:layout_height="36dp"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:editable="true"
            android:background="@drawable/edit_input_bg"
            android:hint="消息内容..."
            android:maxLines="2"
            android:textSize="18sp" />

        <Button
            android:id="@+id/u3b_showcomments_comment_send"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:background="@drawable/chat_edit_send_bg"
            android:gravity="center"
            android:text="发送"
            android:textColor="#888888"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/u3b_showcomments_voice_layout"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/chat_footer_bg"
        android:gravity="center_vertical"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/u3b_showcomments_totext"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/little_text" />

        <Button
            android:id="@+id/u3b_showcomments_start"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/chat_edit_send_bg"
            android:gravity="center"
            android:text="( (  按住开始录音  ) )"
            android:textColor="#888888" />
    </LinearLayout>

</LinearLayout>